function dg_welcome() {
  printf "\n${DG_ANSI_INVERT}"
    repeat_str 64 "#"
    printf "${DG_ANSI_X_INVERT}\n"
    printf "${DG_ANSI_BG_GRE}Welcome to Devs Game v 0.01!${DG_ANSI_X_BG}"
    printf "${DG_ANSI_BG_BLU} `dg_show_url 'http://testing.com' 'Getting Started'` dsfsfd${DG_ANSI_X_COL}"
    printf "\n${DG_ANSI_INVERT}"
    repeat_str 64 "#"
    printf "${DG_ANSI_X_INVERT}\n"
}